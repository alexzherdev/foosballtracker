{
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jasmine/recommended"],

  "rules": {
    "no-unused-vars": 2,
    "no-console": 1,
    "react/prefer-stateless-function": 1,
    "jasmine/no-spec-dupes": [1, "branch"]
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true,
    "jasmine": true,
    "commonjs": true
  },

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "classes": true
    }
  },

  "plugins": [
    "react",
    "jasmine"
  ]
}
